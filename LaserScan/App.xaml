<prism:PrismApplication x:Class="LaserScan.App"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:prism="http://prismlibrary.com/" 
                        ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LaserScan.Core;component/themes/Brushes.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/LaserScan.Core;component/themes/Icons.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/LaserScan.Core;component/themes/Core.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
